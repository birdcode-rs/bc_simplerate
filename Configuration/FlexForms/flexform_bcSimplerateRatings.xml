<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
                <type>array</type>
                <el>
                    <settings.displayMode>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode.0</label>
                                    <value/>
                                </numIndex>
                                <numIndex index="1">
                                    <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode.1</label>
                                    <value>1</value>
                                </numIndex>
                            </items>
                        </config>
                    </settings.displayMode>
                    <settings.resultType>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.resultType</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.resultType.0</label>
                                    <value/>
                                </numIndex>
                                <numIndex index="1">
                                    <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.resultType.1</label>
                                    <value>1</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.resultType.2</label>
                                    <value>2</value>
                                </numIndex>
                            </items>
                        </config>
                    </settings.resultType>
					<settings.recordsFromTable>
						<label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.recordsFromTable</label>
						<config>
							<type>select</type>
							<itemsProcFunc>BirdCode\BcSimplerate\Hooks\ItemsProcFunc->user_recordsFromTable</itemsProcFunc>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0" type="array">
									<label/>
									<value/>
								</numIndex>
							</items>
						</config>
					</settings.recordsFromTable>
					<settings.topRated>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.topRated</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.topRated>
                    <settings.limit>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.limit</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <eval>num</eval>
                        </config>
                    </settings.limit>
                    <settings.hidePagination>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.hidePagination</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.hidePagination>
                    <settings.paginate.insertAbove>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.paginate.insertAbove</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.paginate.insertAbove>
                    <settings.paginate.insertBelow>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.paginate.insertBelow</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.paginate.insertBelow>
                    <settings.paginate.itemsPerPage>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.paginate.itemsPerPage</label>
                        <config>
                            <type>input</type>
                            <size>2</size>
                        </config>
                    </settings.paginate.itemsPerPage>
                    <settings.storage>
                        <label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.startingpoint</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>3</size>
                            <maxitems>50</maxitems>
                            <minitems>0</minitems>
                        </config>
                    </settings.storage>
                      <settings.orderBy>
							<label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label"></numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="label">LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy.rate</numIndex>
										<numIndex index="value">rate</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy.crdate</numIndex>
										<numIndex index="value">crdate</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.orderBy>
					<!-- order direction  -->
					<settings.orderDirection>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="label"></numIndex>
                                    <numIndex index="value"></numIndex>
                                </numIndex>
                                <numIndex index="1">
                                    <numIndex index="label">LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.asc</numIndex>
                                    <numIndex index="value">asc</numIndex>
                                </numIndex>
                                <numIndex index="2">
                                    <numIndex index="label">LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.desc</numIndex>
                                    <numIndex index="value">desc</numIndex>
                                </numIndex>
                            </items>
                        </config>
					</settings.orderDirection>
                </el>
            </ROOT>
        </sDEF>
        <!--
			################################
			  SHEET Template
			################################
		-->
		<template>
			<ROOT>
                <sheetTitle>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_tab.template</sheetTitle>
				<type>array</type>
				<el>
                    <!-- Template Layout -->
                    <settings.headline>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_template.headline</label>
                        <config>
                            <type>input</type>
                            <size>20</size>
                        </config>
                    </settings.headline>
                    <settings.headlineType>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_template.headlineType</label>
                        <config>
                            <type>input</type>
                            <size>20</size>
                            <default>h2</default>
                        </config>
                    </settings.headlineType>
                    <settings.bodytext>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_template.bodytext</label>
                        <config>
                            <type>text</type>
                            <enableRichtext>1</enableRichtext>
                            <richtextConfiguration>default</richtextConfiguration>
                            <cols>48</cols>
                            <rows>10</rows>
                        </config>
                    </settings.bodytext>
					<settings.templateLayout>
                        <label>LLL:EXT:bc_simplerate/Resources/Private/Language/locallang_be.xlf:flexforms_template.templateLayout</label>
                        <config>
                            <type>select</type>
                            <itemsProcFunc>BirdCode\BcSimplerate\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="label"></numIndex>
                                    <numIndex index="value"></numIndex>
                                </numIndex>
                            </items>
                        </config>
					</settings.templateLayout>
				</el>
			</ROOT>
		</template>
    </sheets>
</T3DataStructure>