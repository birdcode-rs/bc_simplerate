<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.displayMode>
						<label>displayMode:</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0" type="array">
									<label>Detailed</label>
									<value/>
								</numIndex>
								<numIndex index="1">
									<label>Total Score</label>
									<value>1</value>
								</numIndex>
							</items>
						</config>
					</settings.displayMode>
					<settings.resultType>
						<label>Show results from</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0" type="array">
									<label>Logged-in Users Only</label>
									<value/>
								</numIndex>
								<numIndex index="1">
									<label>Anonymous Users</label>
									<value>1</value>
								</numIndex>
								<numIndex index="2">
									<label>Current User</label>
									<value>2</value>
								</numIndex>
							</items>
						</config>
					</settings.resultType>
					<settings.limit>
						<label>Limit results</label>
						<config>
							<type>input</type>
							<size>5</size>
							<eval>num</eval>
						</config>
					</settings.limit>
					<!-- Hide pagination -->
					<settings.hidePagination>
						<label>Hide Pagination</label>
						<config>
							<type>check</type>
						</config>
					</settings.hidePagination>
					<settings.paginate.insertAbove>
						<label>Insert pagination Above</label>
						<config>
							<type>check</type>
						</config>
					</settings.paginate.insertAbove>
					<settings.paginate.insertBelow>
						<label>Insert pagination Below</label>
						<config>
							<type>check</type>
						</config>
					</settings.paginate.insertBelow>
					<settings.paginate.itemsPerPage>
						<label>Items Per Page</label>
						<config>
							<type>input</type>
							<size>2</size>
						</config>
					</settings.paginate.itemsPerPage>
					<!-- startingpoint -->
					<settings.storage>
						<label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.startingpoint</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>3</size>
							<maxitems>50</maxitems>
							<minitems>0</minitems>
						</config>
					</settings.storage>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>