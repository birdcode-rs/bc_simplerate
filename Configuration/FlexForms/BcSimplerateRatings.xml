<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.rTable>
						<TCEforms>
							<exclude>1</exclude>
							<label>Show results from table</label>
							<config>
								<type>input</type>
								<size>30</size>
							</config>
						</TCEforms>
					</settings.rTable>
					<settings.rId>
						<TCEforms>
							<exclude>1</exclude>
							<label>Show record results for record ID</label>
							<config>
								<type>input</type>
								<size>30</size>
							</config>
						</TCEforms>
					</settings.rId>
					<settings.resultType>
						<label>Show results from</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0" type="array">
									<label>Only logged in users</label>
									<value/>
								</numIndex>
								<numIndex index="1">
									<label>Not logged in users</label>
									<value>1</value>
								</numIndex>
								<numIndex index="2">
									<label>Current user</label>
									<value>2</value>
								</numIndex>
							</items>
						</config>
					</settings.resultType>
					<settings.limit>
						<label>Limit results</label>
						<config>
							<type>input</type>
							<size>5</size>
							<eval>num</eval>
						</config>
					</settings.limit>
					<!-- startingpoint -->
					<settings.storage>
						<label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.startingpoint</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>3</size>
							<maxitems>50</maxitems>
							<minitems>0</minitems>
						</config>
					</settings.storage>
										<!-- Hide pagination -->
					<settings.hidePagination>
						<label>Hide Pagination</label>
						<config>
							<type>check</type>
						</config>
					</settings.hidePagination>

					<settings.paginate.itemsPerPage>
						<label>Items Per Page</label>
						<config>
							<type>input</type>
							<size>2</size>
						</config>
					</settings.paginate.itemsPerPage>

				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>